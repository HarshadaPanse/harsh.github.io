{
  "configurations": [
    {
      "name": "RA6M4 EVK",
      "cwd": "${workspaceRoot}",
      "executable": "${workspaceRoot}/build/ek_ra6m4_ocpp.elf",
      "linux":{  // this is the key to make it work on Linux
        "serverpath": "/opt/SEGGER/JLink/JLinkGDBServer",
        "armToolchainPath": "/opt/arm-gnu-toolchain-13.2.Rel1-x86_64-arm-none-eabi/bin",
        "preLaunchTask": "start-jlink",
        // "postDebugTask": "stop-jlink",
      },
      "windows": {  // this is the key to make it work on Windows
        "serverpath": "${env:USERPROFILE}/SEGGER/JLink/JLinkGDBServerCL.exe",
        "armToolchainPath": "${env:USERPROFILE}/AppData/Local/Programs/Renesas/RA/e2studio_v2023-10_fsp_v5.1.0/toolchains/gcc_arm/13.2.rel1/bin",
        // "preLaunchTask": "TBD",
        // "postDebugTask": "TBD",
      },
      "request": "launch",
      "type": "cortex-debug",
      "servertype": "jlink",
      "serverArgs": [
        "-select", "IP=172.29.145.145:19023", // Need to check the IP address and Port of the JLink server
        // "-select", "IP=192.168.1.87:19023", // this IP is local IP generated by JLinkRemoteServer.exe
      ],
      "device": "R7FA6M4AF",
      "showDevDebugOutput": "parsed",
      "runToEntryPoint": "main",
      "rttConfig": {  // show the log inside the terminal
        "enabled": true,
        "address": "auto",
        "decoders": [
          {
            "port": 0,
            "type": "console",
          }
        ]
      },
    }
  ],
  "version": "0.2.0"
}